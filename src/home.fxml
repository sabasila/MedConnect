<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="HomeController">

    <top>
        <HBox spacing="15" padding="10" style="-fx-background-color: #ffffff;" alignment="CENTER_LEFT">
            <ImageView fx:id="logoImage" fitHeight="40" fitWidth="150" pickOnBounds="true" preserveRatio="true"/>
            <TextField fx:id="searchField" promptText="ძიება ექიმით..." HBox.hgrow="ALWAYS" />
            <Button fx:id="btnDoctors" text="ექიმები" />
            <Button fx:id="btnPatients" text="პაციენტები" />
            <Button fx:id="btnHome" text="მთავარი" />
        </HBox>
    </top>

    <center>
        <VBox spacing="20" padding="20">

            <Label text="რეკომენდებული ექიმები" style="-fx-font-size: 18; -fx-font-weight: bold;" />

            <ScrollPane fitToWidth="true" prefHeight="150" style="-fx-background-color: transparent;">
                <HBox fx:id="getTopRatedDoctorsBox" spacing="15" padding="10" />
            </ScrollPane>

            <Separator />

            <Label text="ყველა ექიმი" style="-fx-font-size: 16; -fx-font-weight: bold;" />

            <ScrollPane fitToWidth="true" prefHeight="300" style="-fx-background-color: transparent;">
                <VBox fx:id="allDoctorsVBox" spacing="15" padding="10"/>
            </ScrollPane>

        </VBox>
    </center>

</BorderPane>
