<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.PatientsSearchController"
            stylesheets="@../CSS/home.css">

    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="navbar">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>

            <TextField fx:id="patientSearchField" promptText="იპოვე პაციენტი..." HBox.hgrow="ALWAYS"/>
            <Button text="ძებნა" onAction="#onSearchClicked"/>
        </HBox>
    </top>

    <center>
        <ListView fx:id="patientListView" />
    </center>

</BorderPane>
