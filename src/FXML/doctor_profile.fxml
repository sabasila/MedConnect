<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx/21"
            fx:controller="Controllers.DoctorProfileController"
            stylesheets="@../CSS/doctor_profile.css">

    <top>
        <Label text="ექიმის პროფილი" style="-fx-font-size: 20px; -fx-padding: 10;" />
    </top>

    <center>
        <HBox spacing="20" alignment="CENTER" style="-fx-padding: 20;">
            <VBox alignment="TOP_CENTER" spacing="10">
                <ImageView fx:id="photoImageView" fitHeight="150" fitWidth="150" />
            </VBox>


            <VBox spacing="12" alignment="TOP_LEFT">

                <Label fx:id="nameLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                <Label fx:id="bioLabel" wrapText="true" maxWidth="300" />
                <Label fx:id="ratingLabel" style="-fx-font-size: 16px;" />


                <HBox spacing="10">
                    <Label text="შეფასება:" />
                    <ComboBox fx:id="ratingComboBox" />
                </HBox>

                <TextArea fx:id="commentArea" promptText="დაწერე კომენტარი..." />

                <Button fx:id="submitButton" text="დამატება" />

                <Label text="კომენტარები:" style="-fx-font-size: 16px;" />
                <VBox fx:id="commentsBox" styleClass="comments-box" />

                <Button fx:id="backButton" text="← უკან" onAction="#handleGoHome" styleClass="back-button" />

            </VBox>
        </HBox>
    </center>

</BorderPane>
