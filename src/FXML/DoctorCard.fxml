<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<HBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controllers.DoctorCardController"
      spacing="10" style="-fx-padding: 10; -fx-background-color: #f9f9f9; -fx-background-radius: 10;">

    <ImageView fx:id="photoView" fitWidth="100" fitHeight="100" />

    <VBox spacing="5">
        <Label fx:id="nameLabel" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
        <Label fx:id="bioLabel" wrapText="true" />
        <Label fx:id="ratingLabel" />
        <Label fx:id="addressLabel" />
        <Button fx:id="profileBtn" text="პროფილი" />
    </VBox>
</HBox>
