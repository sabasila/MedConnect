<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="PatientRegisterController" alignment="CENTER" hgap="10" vgap="10" style="-fx-padding: 40;">
    <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="fullNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Password:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <PasswordField fx:id="passwordField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Personal ID:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="personalIdField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Button text="Register" onAction="#handleRegisterPatient" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
</GridPane>
