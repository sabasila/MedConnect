<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="RegisterChoiceController"
      stylesheets="@register_choice.css"
      alignment="TOP_CENTER"
      spacing="20"
      styleClass="root">

    <Label text="აირჩიეთ მომხმარებლის ტიპი:" styleClass="label"/>
    <Button text="ექიმი" onAction="#registerAsDoctor" styleClass="button"/>
    <Button text="მომხმარებელი" onAction="#registerAsPatient" styleClass="button"/>

    <Region prefHeight="40"/>

    <Button text="უკან დაბრუნება" onAction="#goBackToLogin" styleClass="button back-button"/>

</VBox>